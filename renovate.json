{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "{{datasource}}",
      "managerFilePatterns": "^Makefile$",
      "depNameTemplate": "{{depName}}",
      "matchStrings": [
        ":=v?(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\\s+# renovate: datasource=(?<datasource>[^ ]+) depName=(?<depName>[^\\n]+)"
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump"
    }
  ]
}
